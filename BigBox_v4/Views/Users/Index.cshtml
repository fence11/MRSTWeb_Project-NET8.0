@model IEnumerable<BigBox_v4.Domain.User>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Admin?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@(user.IsAdmin ? "✅" : "❌")</td>
            </tr>
        }
    </tbody>
</table>
