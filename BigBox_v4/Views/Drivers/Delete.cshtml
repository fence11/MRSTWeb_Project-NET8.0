@model BigBox_v4.Models.Drivers

@{
    ViewData["Title"] = "Delete Driver";
}

<div class="container">
    <h1>Delete Driver</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this driver?</h3>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Driver Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LicenseNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LicenseNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EmploymentDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmploymentDate)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

