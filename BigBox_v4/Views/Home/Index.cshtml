@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to BigBox Shipping</h1>
    <p>Your trusted partner for all your shipping needs.</p>

    <div class="mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body text-center p-5">
                        <h2 class="mb-4">Ready to Ship?</h2>
                        <p class="lead mb-4">Start the shipping process by entering your box details.</p>
                        <a asp-controller="BoxDetails" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3">
                            <i class="bi bi-box-seam me-2"></i> Start Shipping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h2>Application Features</h2>
        <div class="row justify-content-center mt-3">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Driver Management</h5>
                        <p class="card-text">View, add, edit, and delete drivers in the system.</p>
                        <a asp-controller="Drivers" asp-action="Index" class="btn btn-primary">Manage Drivers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Driver Schedules</h5>
                        <p class="card-text">Manage driver timetables and work schedules.</p>
                        <a asp-controller="DriverSchedule" asp-action="Index" class="btn btn-primary">View Schedules</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
